<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorBg"
    tools:context=".KakaoLoginActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:rotation="30"
        android:src="@drawable/deco1"
        android:alpha="0.5"
        app:layout_constraintBottom_toTopOf="@+id/login_tv_2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/login_iv_restaurant"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/restaurant"
        android:alpha="0.5"
        app:layout_constraintBottom_toTopOf="@+id/btn_kakao_login"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/login_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="레시피"
        android:textSize="60sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/kakaoBrown"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/login_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="와"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_tv_1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/kakaoBrown"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/login_tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안심 식당"
        android:textSize="60sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_tv_2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/kakaoBrown"
        android:textStyle="bold"/>

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/btn_kakao_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="60dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>