<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorBg"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECIPE_NM_KO"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/list_recipe_img_url"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_recipe_summary"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/list_recipe_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUMRY"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/list_recipe_img_url"
        app:layout_constraintTop_toBottomOf="@id/list_recipe_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/list_recipe_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COOKING_TIME"
        app:layout_constraintLeft_toRightOf="@id/list_recipe_img_url"
        app:layout_constraintTop_toBottomOf="@id/list_recipe_summary"
        app:layout_constraintBottom_toTopOf="@id/list_recipe_calories"
        android:layout_marginLeft="5dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_recipe_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALORIE"
        app:layout_constraintLeft_toRightOf="@id/list_recipe_img_url"
        app:layout_constraintBottom_toBottomOf="@id/list_recipe_img_url"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="8dp"/>

